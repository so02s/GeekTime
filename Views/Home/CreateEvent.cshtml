<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateEvent</title>
</head>
<body>
    <h4>Добавление ивента</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("CreateEvent", "Events"))
            {
                <label>Название:</label><br />
                <input type="text" name="Name" /><br /><br />
                <label>Описание:</label><br />
                <input type="text" name="Describtion" /><br /><br />
                <label>Фото:</label><br />
                <input type="text" name="Image" /><br /><br />
                <label>Ведущий:</label><br />
                <input type="text" name="Admin" /><br /><br />
                <input type="submit" value="Добавить ивент" />
            }
        </div>
    </div>
    <div>
        @Html.ActionLink("Вернуться к списку ивентов", "EventPage", "Events")
    </div>
</body>
</html>