@using GeekTime.Models
@using GeekTime.Manager
@model IEnumerable<Contacts>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ContactPage</title>
</head>
<body>
    <h1>Конакты администрации GeekTime:</h1>
    <table border="1" width="100%" cellpadding="5">
        <tr>
            <th>Должность</th>
            <th>Имя</th>
            <th>телефон</th>
            <th>почта</th>
        </tr>
        @{
            foreach (var item in ContactsList.personcontacts)
            {
                <tr>
                    <td>@item.Post</td>
                    <td>@item.Name</td>
                    <td>@item.TelNumber</td>
                    <td>@item.Mail</td>
                </tr>
            }
        }
    </table>
    @using (Html.BeginForm("CreateContact", "Home"))
    {
        <div>
            <input type="submit" value="Добавить контактное лицо" />
        </div>
    }
</body>

</html>