@{
    ViewData["Title"] = "Информация для администраторов";
}

<script src="/js/site.js"></script>

<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">

    <title>Антикафе GeekTime | Для админов</title>

    <link rel="icon" href="/css/pics/icocat.png" type="image/x-icon">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" type="text/css" href="../../css/site.css">

    <style>
        h2 {
            text-align: center;
            font-size: 60px;
            font-family: 'Underdog', cursive;
            line-height: 90%;
            position: relative;
        }

            h2::before {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: #ffb40080;
                border-radius: 25px;
                z-index: -1;
            }

        h4 {
            text-align: center;
            font-size: 100px;
            font-family: 'Underdog', cursive;
            line-height: 150%;
            color: #ff4f00;
            position: relative;
            clear: left;
            text-shadow: #000 1px 1px 5px, #000 1px 1px 5px, #000 1px -1px 5px, #000 -1px 1px 5px;
        }

            h4::before {
                content: '';
                position: absolute;
                left: 25%;
                right: 25%;
                top: -25%;
                width: 50%;
                height: 150%;
                background-color: #faf7b4;
                z-index: -1;
                border-radius: 25px;
            }

        a {
            color: #ff4f00;
            text-decoration: none;
        }
    </style>
</head>

<body>
    <h4>Данные</h4>

    <h2><a asp-area="" asp-controller="Event" asp-action="EventPage">Мероприятия</a>></h2>
    <h2><a asp-area="" asp-controller="Home" asp-action="PostsPage">Посты</a>></h2>
    <h2><a asp-area="" asp-controller="Home" asp-action="ComicsPage">Комиксы</a>></h2>
    <h2><a asp-area="" asp-controller="Admin" asp-action="AdminPage">Админы</a>></h2>
    <h2><a asp-area="" asp-controller="Home" asp-action="ContactPage">Контакты администрации</a>></h2>
</body>
</html>