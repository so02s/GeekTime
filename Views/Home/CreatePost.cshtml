@using GeekTime.Manager
@using GeekTime.Models

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreatePost</title>
</head>
<body>
    <h4>Добавление поста</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("CreatePost", "Home"))
            {
                <label>Пост в вк:</label><br />
                <input type="text" name="Vk_link" /><br /><br />
                <label>Фото:</label><br />
                <input type="text" name="Image" /><br /><br />
                <label>Описание:</label><br />
                <input type="text" name="Describtion" /><br /><br />
                <label>Ведущий:</label><br />
                <input type="text" name="Admin" /><br /><br />
                <input type="submit" value="Добавить пост" />
            }
        </div>
    </div>
    <div>
        @Html.ActionLink("Вернуться к постам", "PostsPage", "Home")
    </div>
</body>
</html>