@{
    ViewData["Title"] = "Игры";
}
<!--каталог игр-->
<!doctype html>
<html>
<head>
    <meta charset="utf-8">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">

    <!--скрипты для пролистывания-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <!--пролистывание наверх-->
    <script type="text/javascript">
			$(function() {
				$(window).scroll(function() {
					if($(this).scrollTop() != 0) {
						$('#toTop').fadeIn();
						}
					else {
						$('#toTop').fadeOut();
						}
					});
				$('#toTop').click(function() {
					$('body,html').animate({scrollTop:0},800);
					});
				});
    </script>
    <!--пролистывание до якоря-->
    <script>
			$(document).ready(function(){
				$('a[href^="#"], *[data-href^="#"]').on('click', function(e){
					e.preventDefault();
					var t = 800;
					var d = $(this).attr('data-href') ? $(this).attr('data-href') : $(this).attr('href');
					$('html,body').stop().animate({ scrollTop: $(d).offset().top - 120}, t);
				});
			});
    </script>

    <title>Антикафе GeekTime | Каталог игр</title>
    <link rel="icon" href="css/pics/icocat.png" type="image/x-icon">
</head>

<body>
